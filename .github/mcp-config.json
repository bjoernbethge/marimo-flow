{
  "mcpServers": {
    "serena": {
      "type": "local",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "."
      ],
      "env": {
        "SERENA_CONFIG_DIR": ".serena"
      },
      "tools": [
        "find_file",
        "find_symbol",
        "search_for_pattern",
        "read_file",
        "get_symbols_overview",
        "find_referencing_symbols"
      ]
    },
    "context7": {
      "type": "local",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {
        "CONTEXT7_API_KEY": "${COPILOT_MCP_CONTEXT7_API_KEY}"
      },
      "tools": [
        "get-library-docs",
        "resolve-library-id",
        "search_docs"
      ]
    },
    "marimo": {
      "type": "http",
      "url": "http://127.0.0.1:2718/mcp/server",
      "description": "marimo MCP server - install: uv tool install 'marimo[lsp,recommended,sql,mcp]>=0.18.0', start: marimo edit --mcp --no-token --port 2718 --headless",
      "tools": [
        "get_marimo_rules",
        "get_active_notebooks",
        "get_lightweight_cell_map",
        "get_cell_runtime_data",
        "get_cell_outputs",
        "get_tables_and_variables",
        "get_database_tables",
        "get_notebook_errors",
        "lint_notebook"
      ]
    },
    "mlflow": {
      "type": "local",
      "command": "mlflow",
      "args": ["mcp", "run"],
      "env": {
        "MLFLOW_TRACKING_URI": "${MLFLOW_TRACKING_URI:-sqlite:///mlruns.db}"
      },
      "tools": [
        "search_traces",
        "get_trace",
        "log_feedback",
        "log_expectation",
        "evaluate_traces",
        "list_scorers",
        "register_llm_judge",
        "delete_traces"
      ]
    }
  }
}
